<% if @order and @order.complete? %>
  <% buttons = Spree::PrintInvoice::Config[:print_buttons]
     buttons = buttons.split(",").collect{|b| b.strip } %>
  <% buttons.each do |button| %>
    <li><a class="button icon-print" href="/orders/<%= @order.number %>.pdf?template=invoice">Print Invoice</a></li>
  <% end %>
<% end %>
